{{view Admin.HeaderView}}
        <div class="right">
            {{#linkTo "app.list"}}Back{{/linkTo}}
        </div>
        <form action="#">
            <div id="content">
                <div class="control-group">
                    <label class="control-label" for="headline">Name</label>
                    <div class="controls">
                        {{view Ember.TextField id="headline" valueBinding="name"}}
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="headline">Description</label>
                    <div class="controls">
                        {{view Ember.TextArea id="author" valueBinding="descr"}}
                    </div>
                </div>
            </div>

            <div id="toolbar">
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-primary" {{action saveApp content}}>Save</button>&nbsp;&nbsp;
                        <button type="submit" class="btn">Reset</button>
                    </div>
                </div>
            </div>
        </form>
{{view Admin.FooterView}}

